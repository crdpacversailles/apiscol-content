<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://java.sun.com/xml/ns/javaee" xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
	id="WebApp_ID" version="3.0">
	<display-name>ApiScol Content : resources repository</display-name>
	<context-param>
		<param-name>common_properties_file_path</param-name>
		<param-value>/WEB-INF/common.properties</param-value>
	</context-param>
	<context-param>
		<param-name>specific_properties_file_path</param-name>
		<param-value>/WEB-INF/service.properties</param-value>
	</context-param>
	<servlet>
		<servlet-name>ApiScol_Content</servlet-name>
		<servlet-class>fr.ac_versailles.crdp.apiscol.content.ApiscolContent</servlet-class>
		<init-param>
			<param-name>com.sun.jersey.spi.container.ContainerRequestFilters</param-name>
			<param-value>fr.ac_versailles.crdp.apiscol.content.filters.SecurityFilter</param-value>
		</init-param>

		<init-param>
			<param-name>com.sun.jersey.config.property.packages</param-name>
			<param-value>fr.ac_versailles.crdp.apiscol.content</param-value>
		</init-param>
		<load-on-startup>1</load-on-startup>
	</servlet>
	<servlet-mapping>
		<servlet-name>ApiScol_Content</servlet-name>
		<url-pattern>/*</url-pattern>
	</servlet-mapping>
</web-app>